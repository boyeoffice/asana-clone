.navbar {
  &-custom {
    @include mb {
      height: 57px;
      border-bottom: 1px solid #ccc;
      display: flex;
      align-items: center;
    }
    @include lg {
      display: none;
    }
  }
  transition: all 300ms ease 0s;
  &-purple {
    background: #6f42c1;
  }
  &-brand {
    color: #fff;
    &:hover {
      color: #ccc;
    }
  }
  &-toggler {
    width: 37px;
    height: 27px;
    outline: 0;
    &:focus {
      outline: 0;
    }
    &-icon {
      display: block;
      position: relative;
      width: 22px;
      height: 1px;
      border-radius: 1px;
      background: #FFFFFF;
      outline: 1px solid transparent;
      &.bar-1 {
        top: 0px;
      }
      &.bar-2 {
        width: 17px;
        margin-top: 7px;
        transition: width .2s linear;
      }
      &.bar-3 {
        bottom: 0;
        margin-top: 7px;
      }
    }
  }
  &-translate {
    @include mb {
      display: flex;
      width: 100%;
      justify-content: space-between;
      align-items: center;
      transform: translate3d(0px, 0, 0);
    }
  }
  &-nav {
    .nav-link {
      color: #fff;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 13px;
      opacity: .7;
      &:hover {
        opacity: 1;
      }
    }
  }
}

.sidebar-collapse {
  & .navbar-collapse {
    & .nav-link {
      padding-bottom: .77rem;
      padding-top: .77rem;
      margin-left: 1rem;
      margin-right: 1rem;
      opacity: 1;
    }
    @include mb {
      background: url(/img/blurred-image-1.jpg) rgba(0, 0, 0, 0) repeat scroll 0% 0% / cover;
    }
    &::before {
      @include mb {
        content: '';
        background: linear-gradient(#6f42c1 0%, #000 80%);
        opacity: 0.76;
        display: block;
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: -1;
      }
    }
    @include mb {
      position: fixed;
      display: block;
      top: 0;
      right: 0;
      height: 100%;
      transform: translate3d(300px, 0, 0);
      transition: all 0.5s cubic-bezier(0.685, 0.0473, 0.346, 1);
    }
  }
  & [class*="navbar-expand-"] {
    & .navbar-collapse {
      width: 300px;
    }
  }
  & .navbar {
    & .toggled {
      & .bar-1 {
        top: 6px;
        animation: topbar-x 500ms 0s;
        animation-fill-mode: forwards;
      }
      & .bar-1, .bar-2, .bar-3 {
        outline: 1px solid transparent;
      }
      & .bar-2, .bar-3 {
        margin-top: 5px;
      }
      & .bar-3 {
        animation: bottombar-x 500ms 0s;
        animation-fill-mode: forwards;
        bottom: 6px;
      }
      & .bar-2 {
        opacity: 0;
      }
      & .navbar-toggler-icon {
        width: 24px;
      }
    }
  }
 & #bodyClick {
      height: 100%;
      width: 100%;
      position: fixed;
      opacity: 1;
      top: 0;
      left: auto;
      right: 300px;
      content: "";
      z-index: 9999;
      overflow-x: hidden;
      background-color: transparent;
    }
}

.open-nav {
  &.sidebar-collapse {
    & .navbar-collapse {
      @include mb {
        transform: translate3d(0px, 0, 0);
      }
    }
    & .navbar-translate {
      @include mb {
        transform: translate3d(-300px, 0, 0);
      }
    }
  }
}

@keyframes topbar-x {
        0% {
            top: 0px;
            transform: rotate(0deg);
        }
        45% {
            top: 6px;
            transform: rotate(145deg);
        }
        75% {
            transform: rotate(130deg);
        }
        100% {
            transform: rotate(135deg);
        }
    }
    @-webkit-keyframes topbar-x {
        0% {
            top: 0px;
            -webkit-transform: rotate(0deg);
        }
        45% {
            top: 6px;
